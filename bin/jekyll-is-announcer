#!/usr/bin/env ruby

require 'fileutils'
require 'net/http'
require 'uri'
require 'json'

module AnnouncerBin

  class << self

    def telegram post, config
      bot_uri = URI("https://api.telegram.org/bot#{ENV['TG_BOT_TOKEN']}/sendMessage")
      bot_msg = JSON.generate(
        {
          'chat_id' => config['chat_id'],
          'parse_mode' => 'MarkdownV2',
          'text' => telegram_message(post)
        }
      )
      
      http = Net::HTTP::new bot_uri.host, bot_uri.port
      http.use_ssl = true

      request = Net::HTTP::Post::new bot_uri.path, 'Content-Type' => 'application/json'
      request.body = bot_msg

      response = http.request request

      if response.code != '200' && response.code != '201'
        warn "Error on telegram sendMessage, HTTP code = #{response.code}"
        return false
      end

      result = nil
      begin
        result = JSON.parse response.body
      rescue JSON::ParseError => e
        warn "JSON parse error: #{e.message}"
        return false
      end
      
      if !result['ok']
        warn "Bad result of sendMesage: #{response.body}"
        return false
      end
      
      "https://t.me/#{result['result']['chat']['username']}/#{result['result']['message_id']}"
    end

    def index_now post, config
      # TODO: implement
    end

    private

    def telegram_escape text
      special_chars = '_*[]()~`>#+-=|{}.!'
      pattern = Regexp.union(special_chars.chars)
      text.gsub(pattern) { |char| "\\#{char}" }
    end

    def telegram_message post
      [
        "*[#{telegram_escape(post['title'])}](#{post['url']})*",
        "#{telegram_escape(post['date'])}",
        "",
        telegram_escape(post['description']),
        "",
        (post['categories'] || []).map { |c| '\#' + telegram_escape(c) }.join(' â€¢ '),
        ""
      ].join("\n")
    end

  end

end

announced_path = File.join '.', '_data', 'announced.json'
announced_site_path = File.join '.', '_site/data', 'announced.json'
announces_path = File.join '.', '.announces.json'

if File.exist?(announces_path)
  announced = begin 
    JSON.load_file announced_path
  rescue Exception => e
    warn e.message
    {}
  end
  save_flag = false
  announces = JSON.load_file announces_path
  announces.each do |channel, anno_data|
    config = anno_data['config']
    next unless config && config['method']
    posts = anno_data['posts']
    posts.each do |key, value|
      next if announced[channel] && announced[channel][key]
      result = AnnouncerBin.send config['method'], value, config
      if result
        announced[channel] ||= {}
        announced[channel][key] = result
        save_flag = true
      end
    end
  end
  if save_flag
    File.write announced_path, JSON.pretty_generate(announced)
    FileUtils.mkdir_p './_site/data'
    File.write announced_site_path, JSON.pretty_generate(announced)
  end
end
